<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Me Profile</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<style>
    .Img-Header{
      border: 1px black;
      border-radius: 50%;
      width: 40px;
      height: 35px;
    }
    .image-profile{
        background-color: blanchedalmond;
        width: 80px;
        height: 70px;
        border: 1px black;
        border-radius: 50%;
    }
  </style>
<body>
    <nav class="navbar navbar-light bg-dark">
        <a class="navbar-brand text-light" href="/home">DevSocial</a>
        <a href="/me" class="text-light">Profile</a>
        <a href="/auth/signout" class="text-light">SignOut</a>
        <form class="form-inline" action="/search" method="GET">
          <input class="form-control mr-sm-2" name="search" type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Search</button>
        </form>
      </nav>
    <div class="container">
      <% result.forEach((result)=>{ %>
        <div class=" mt-2 card text-white bg-dark mb-3">
          <div class="card-body">
              <img class="image-profile" src="<%= result.PostedBy[0].image%>">
              <h2 class="card-title"> <%= result.PostedBy[0].Username%></h2>
          </div>
        </div> 

     <% }) %>
        <% result.forEach((result) => { %> 

            <div class="card mt-3">
                <div class="card-header"><img src="<%= result.PostedBy[0].image %>" class="Img-Header" alt=""> <%= result.PostedBy[0].Username %></div>
                
                  <img class="card-img-top" src="<%= result.img %>">
                <div class="card-body">
                  <h5 class="card-title"><%=result.title%></h5>
                  <p class="card-text"><%=result.desc%><p>
                  <a href="/me/delete/<%=result._id%>">delete</a>
                </div>
              </div>
        <%});%>
    </div>
</body>
</html>